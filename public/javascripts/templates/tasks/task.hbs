<span class="importanceLevel pull-left {{importanceClass importance}}"></span>
{{name}}
	<span class="glyphicon glyphicon-plus controls pull-right"></span>&nbsp;<span class="badge badge-success pull-right">{{comments.length}}</span>
	<div class="commentWrapper">
		<div class="comment">
			{{#if comments}}
		      {{#each comments}}
					<blockquote>
		        <p>
		          {{this.comment}}
		        </p>
		        <footer>created by<cite>{{this.by}}</cite> at <cite>{{prettifyDate this.created_at}}</cite></footer>
		      </blockquote>
		      {{/each}}
			{{/if}}
		</div>
		<hr />
        <div class="form-group">
        	<textarea class="form-control commentTextarea" name="description" placeholder="Comment..." rows="3" value=""></textarea>
		</div>
		<input class="btn btn-lg btn-success btn-block btn-sm commentAdd" type="submit" value="Add Comment" />
		<hr>
		<div class="btn-group btn-group-justified">
			{{#unless archive}}
			<div class="btn-group">
				<button class="btn btn-lg btn-default btn-sm editTask"><i class="glyphicon glyphicon-pencil"></i>&nbsp; Edit</button>
			</div>
			<div class="btn-group">
				<button class="btn btn-lg btn-default btn-sm archiveTask"><i class="glyphicon glyphicon-folder-close"></i>&nbsp; Archive Task</button>
			</div>
			{{/unless}}
			<div class="btn-group">
				<button class="btn btn-lg btn-danger btn-sm removeTask"><i class="glyphicon glyphicon-trash"></i>&nbsp; Remove Task</button>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>